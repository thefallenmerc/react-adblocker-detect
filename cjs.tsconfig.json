{
    "compilerOptions": {
        "target": "es2017",
        "lib": [
            "esnext.asynciterable",
            "es2017",
            "dom",
            "dom.iterable",
            "scripthost"
        ],
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "./cjs",
        "downlevelIteration": true,
        "allowJs": true
    },
    "include": [
        "./src/**/*.ts*"
    ],
    "exclude": [
        "cjs",
        "esm",
        "node_modules"
    ]
}